<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DietManager.SuccessPage"
             NavigationPage.HasNavigationBar="False">
    
    <ContentPage.Content>
        <StackLayout x:Name="SuccessBG">
            
            <Image x:Name="SuccessImage" HorizontalOptions ="CenterAndExpand" VerticalOptions ="CenterAndExpand"/>

            <Frame x:Name ="Frame1" BackgroundColor="#44e6628f" CornerRadius="20" Margin="34">
                <StackLayout>
                    <Label Text="Отлично,программа была построена успешно. Мы готовы начинать!" TextColor="White" FontSize = "17" HorizontalTextAlignment= "Center" VerticalTextAlignment="Center"/>
                </StackLayout>
            </Frame>

            <Button x:Name ="StartProgramButton" BorderColor="Gray" BorderWidth="1" HeightRequest="75" WidthRequest="260" CornerRadius="20" Margin="50,90,50,130" Text = "Начать программу" TextColor="White"  FontSize = "17" Clicked="StartProgramClick">
                <!--ImageSource ="https://w7.pngwing.com/pngs/29/743/png-transparent-computer-icons-down-arrow-angle-monochrome-black.png"-->
                <Button.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color = "#F68084"
                            Offset= "0.1" />
                        <GradientStop Color=  "#FAB2B5"
                             Offset= "1.0" />
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
            
        </StackLayout>

    </ContentPage.Content>
</ContentPage>